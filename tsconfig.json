{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist/",
        "sourceMap": true,
        "lib": [
            "es2021",
            "dom"
        ]
    },
    "include": [
        "src/**/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
